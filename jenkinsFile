pipeline {
  agent any
  environment {
    version = "1.6.0"
    qa-env = "Test-env-1"
  }
  stages {
    stage('Build') {
      steps {
        sh './gradlew clean build -Pversion=${version}'
      }
    }
    stage('QA Deploy') {
      options {
        timeout(time: 20, unit: 'MINUTES')
      }
      steps {
        sh '/Users/aravind.nambi/Library/Python/2.7/bin/eb deploy ${qa-env} hello-world-${version}'
        sh 'sleep 30s'
      }
    }
    post {
        failure {
            error 'failed'
        }
    }
    stage('Integration test') {
        steps {
          sh './gradlew integrationTest'
        }
    }
    stage('Prod Deploy') {
        input {
            message "Approve?"
            ok "Yes"
            //submitter "anambi"
        }
        steps {
            echo 'Deploy to prod'
        }
    }
  }
}